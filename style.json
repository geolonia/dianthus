{
  "version": 8,
  "name": "GSI Japan + OpenStreetMap based style for Geolonia",
  "metadata": {},
  "sources": {
    "natural-earth": {
      "type": "vector",
      "url": "https://cdn.geolonia.com/tiles/natural-earth.json"
    },
    "gsi-japan": {
      "type": "vector",
      "url": "https://cdn.geolonia.com/tiles/gsi.json"
    },
    "geolonia": {
      "type": "vector",
      "minzoom": 8,
      "url": "https://api.geolonia.com/v1/sources?key=YOUR-API-KEY"
    }
  },
  "sprite": "https://sprites.geolonia.com/basic",
  "glyphs": "https://glyphs.geolonia.com/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "rgba(16, 15, 20, 0)"
      }
    },
    {
      "id": "landcover-wood",
      "type": "fill",
      "source": "geolonia",
      "source-layer": "landcover",
      "filter": ["==", "class", "wood"],
      "layout": {
        "visibility": "none"
      },
      "paint": {
        "fill-color": "#6a4",
        "fill-opacity": 0.2,
        "fill-outline-color": "hsla(0, 0%, 0%, 0.03)",
        "fill-antialias": {
          "base": 1,
          "stops": [
            [0, false],
            [9, true]
          ]
        }
      }
    },
    {
      "id": "landcover-grass-park",
      "type": "fill",
      "source": "geolonia",
      "source-layer": "park",
      "filter": ["==", "class", "public_park"],
      "paint": {
        "fill-color": "#d8e8c8",
        "fill-opacity": 0.8
      }
    },
    {
      "id": "waterway-river",
      "type": "line",
      "source": "gsi-japan",
      "source-layer": "river",
      "filter": ["all", ["!=", "ftCode", 5322]],
      "layout": {
        "line-cap": "round"
      },
      "paint": {
        "line-color": "rgba(87, 112, 131, 1)",
        "line-width": {
          "base": 1.2,
          "stops": [
            [10, 0.8],
            [20, 6]
          ]
        }
      }
    },
    {
      "id": "water-offset",
      "type": "fill",
      "source": "natural-earth",
      "source-layer": "water",
      "maxzoom": 8,
      "filter": ["==", "$type", "Polygon"],
      "layout": {
        "visibility": "visible"
      },
      "paint": {
        "fill-color": "rgba(87, 112, 131, 1)"
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "gsi-japan",
      "source-layer": "waterarea",
      "layout": {
        "visibility": "visible"
      },
      "paint": {
        "fill-color": "rgba(87, 112, 131, 1)"
      }
    },
    {
      "id": "road-outline",
      "type": "line",
      "source": "gsi-japan",
      "source-layer": "road",
      "minzoom": 16,
      "filter": ["all", [">=", "ftCode", 2200], ["<", "ftCode", 2700]],
      "layout": {
        "line-cap": "round",
        "line-join": "round",
        "visibility": "visible"
      },
      "paint": {
        "line-color": "#EEEEEE",
        "line-width": 3,
        "line-dasharray": [3, 2, 0.5, 2]
      }
    },
    {
      "id": "structurea",
      "type": "fill",
      "source": "gsi-japan",
      "source-layer": "structurea",
      "minzoom": 15,
      "filter": ["all", ["==", "$type", "Polygon"]],
      "layout": {
        "visibility": "visible"
      },
      "paint": {
        "fill-color": "#FAFAFA"
      }
    },
    {
      "id": "contour",
      "type": "line",
      "source": "gsi-japan",
      "source-layer": "contour",
      "filter": [
        "all",
        [
          "!=",
          ["to-number", ["get", "alti"]],
          ["*", 100, ["round", ["*", 0.01, ["to-number", ["get", "alti"]]]]]
        ]
      ],
      "paint": {
        "line-color": "rgba(255, 143, 242, 1)",
        "line-width": 0.5
      }
    },
    {
      "id": "contour-main",
      "type": "line",
      "source": "gsi-japan",
      "source-layer": "contour",
      "filter": [
        "all",
        [
          "==",
          ["to-number", ["get", "alti"]],
          ["*", 50, ["round", ["*", 0.02, ["to-number", ["get", "alti"]]]]]
        ]
      ],
      "paint": {
        "line-color": "rgba(255, 143, 242, 1)",
        "line-width": 0
      }
    }
  ],
  "id": "geolonia-dianthus"
}
